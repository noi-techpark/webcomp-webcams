  "image": "wcs-logo.png",
  "searchTags": [
    "map"
  ],
  "dist": {
    "basePath": "dist",
    "files": [
      "webcomp-webcams.min.js"
    ],
    "scripts": [
    ]
  },
  "configuration": {
    "tagName": "webcomp-webcams",
    "options": [
      {
        "key": "centermap",
        "type": "text",
        "label": "latitude and longitude: ex. 46.7728692,10.7916716",
        "required": false,
        "options": {
          "default": "46.7728692,10.7916716"
        }
      },
      {
        "key": "zoommap",
        "type": "text",
        "label": "Zoom level of the map example 10",
        "required": false,
        "options": {
          "default": "10"
        }
      },
      {
        "key": "source",
        "type": "multiselect",
        "label": "Sources of the webcams",
        "required": false,
        "options": {
          "values": [
            "idm",
            "lts",
            "dss",
            "panomax",
            "panocloud",
            "feratel"
          ]
        }
      }
    ]
  }
}
